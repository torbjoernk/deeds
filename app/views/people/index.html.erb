<h1>
  <%= model_name_with_icon Person, :plural %>
  <%= render partial: 'shared/index/main_action_btn',
             locals: { path_to_new_entity: new_person_path,
                       path_to_refresh: people_path,
                       entity_name: Person.model_name.human } %>
</h1>

<div class="row">
  <div id="people-table">
    <div class="table" id="people">
      <div class="table-body container-fluid">
        <%= render partial: 'person', collection: @people %>
      </div>
    </div>
  </div>
</div>
