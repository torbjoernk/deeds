<h1>
  <%= model_name_with_icon Storage, :plural %>
  <%= render partial: 'shared/index/main_action_btn',
             locals: { path_to_new_entity: new_storage_path,
                       path_to_refresh: storages_path,
                       entity_model: Storage } %>
</h1>

<% if @collection %>
  <dl class="row">
    <dt class="col-md-2">associated with Collection</dt>
    <dd class="col-md-10">
      <%= render partial: 'collections/oneline', locals: {collection: @collection } %>
    </dd>
  </dl>
<% end %>

<div class="row">
  <div id="storages-table">
    <div class="table" id="storages">
      <div class="table-body container-fluid">
        <%= render partial: 'storage', collection: @storages %>
      </div>
    </div>
  </div>
</div>
