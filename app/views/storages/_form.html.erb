<div class="modal-dialog" role="document">
  <div class="modal-content">
    <%= form_for @storage do |f| %>
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <h4 class="modal-title" id="storage-modal-label">New Storage</h4>
      </div>
      <div class="modal-body">
        <div class="container-fluid">
          <div class="row form-group">
            <%= f.label :title, class: 'col-md-3 form-control-label' %>
            <div class="col-md-9">
              <%= f.text_field :title, class: 'form-control' %>
            </div>
          </div>
          <div class="row form-group">
            <%= f.label :notes, class: 'col-md-3 form-control-label' %>
            <div class="col-md-9">
              <%= f.text_area :notes, rows: 5, class: 'form-control' %>
            </div>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <div class="container-fluid">
          <div class="row">
            <div class="col-md-12 text-xs-center">
              <%= f.submit class: 'btn btn-sm btn-primary', data: { close: '' } %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
