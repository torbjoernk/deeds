<li class="list-group-item">
  <div id="storage-<%= storage.id %>" class="list-group-item-heading" role="tab">
    <a aria-controls="storage-<%= storage.id %>-content"
       aria-expanded="false"
       href="#storage-<%= storage.id %>-content"
       data-parent="#storages-accordion"
       data-toggle="collapse">
      <%= icon_for Storage %>
      <%= storage.title %>
    </a>
  </div>
  <div id="storage-<%= storage.id %>-content"
       class="list-group-item-text collapse"
       aria-labelledby="storage-<%= storage.id %>"
       role="tabpanel"
       aria-expanded="false">
    <%= render partial: 'storages/show/content', locals: { storage: storage } %>
  </div>
</li>
