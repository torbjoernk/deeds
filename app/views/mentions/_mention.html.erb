<% content_for :entity_info, flush: true do %>
  <div class="col-mention-deed">
    <% unless mention.deed.nil? %>
      <%= link_to deed_path(mention.deed), remote: true do %>
        <%= icon_for Deed %>
        <%= mention.deed.title %>
      <% end %>
    <% end %>
  </div>
  <div class="col-mention-person">
    <% unless mention.person.nil? %>
      <%= link_to person_path(mention.person), remote: true do %>
        <%= icon_for Person %>
        <%= mention.person.name %>
      <% end %>
    <% end %>
  </div>
  <div class="col-mention-place">
    <% unless mention.place.nil? %>
      <%= link_to place_path(mention.place), remote: true do %>
        <%= icon_for Place %>
        <%= mention.place.title %>
      <% end %>
    <% end %>
  </div>
  <div class="col-mention-role">
    <% unless mention.role.nil? %>
      <%= link_to role_path(mention.role), remote: true do %>
        <%= icon_for Role %>
        <%= mention.role.title %>
      <% end %>
    <% end %>
  </div>
<% end %>

<% content_for :entity_toolbar_associations, flush: true do %>
  <div class="btn-group btn-group-sm" role="group">
    <% if mention.notes.nil? or mention.notes.empty? %>
      <a class="btn btn-sm btn-outline-secondary disabled">
        <%= icon('comment-o', class: 'fa-fw') %>
      </a>
    <% else %>
      <a class="btn btn-sm btn-secondary"
         title="<%= mention.notes %>"
         data-toggle="tooltip">
        <%= icon('comment-o', class: 'fa-fw') %>
      </a>
    <% end %>
  </div>
<% end %>

<%= render partial: 'shared/index/entity',
           locals: { entity_id: "mention-#{mention.id}", entity: mention } %>
