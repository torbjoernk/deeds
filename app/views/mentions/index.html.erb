<h1>
  <%= model_name_with_icon Mention, :plural %>
  <%= render partial: 'shared/index/main_action_btn',
             locals: { path_to_new_entity: new_mention_path,
                       path_to_refresh: mentions_path,
                       entity_model: Mention } %>
</h1>

<div class="row">
  <div id="mentions-table">
    <div class="table" id="mentions">
      <div class="table-body container-fluid">
        <%= render partial: 'mention', collection: @mentions %>
      </div>
    </div>
  </div>
</div>
