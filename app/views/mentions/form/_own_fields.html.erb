                         placeholder: t(:search_role, scope: [:views, :mention, :modals]) %>
        <%= content_tag :datalist, id: 'roles' do %>
          <% Role.all.each do |role| %>
            <%= content_tag :option, role.title %>
          <% end %>
        <% end %>
        <div class="input-group-btn">
          <%= content_tag :a,
                          icon('search', class: 'fa-fw'),
                          id: 'btn-show-selected-role-details',
                          class: 'btn btn-outline-info',
                          role: 'button' %>
        </div>
      </div>
    </div>
  </div>
  <div class="row form-group">
    <%= f.label :notes, class: 'col-md-3 form-control-label' %>
    <div class="col-md-9">
      <%= f.text_area :notes, rows: 5, class: 'form-control' %>
    </div>
  </div>
<% end %>
