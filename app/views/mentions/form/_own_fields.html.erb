        <div class="input-group-btn">
          <%= content_tag :a,
                          icon('search', class: 'fa-fw'),
                          id: 'btn-show-selected-person-details',
                          class: 'btn btn-outline-info',
                          role: 'button' %>
        </div>
      </div>
    </div>
  </div>
  <div id="assoc-place" class="row form-group">
