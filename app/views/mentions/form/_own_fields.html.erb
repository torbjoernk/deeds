<%= fields_for @mention do |f| %>
  <div id="assoc-deed" class="row form-group">
    <%= f.label :deed, class: 'col-md-3 form-control-label' %>
    <div class="col-md-9">
      <div class="input-group">
        <%= f.text_field :deed,
                         class: 'form-control',
                         list: 'deeds',
                         placeholder: t(:search_deed, scope: [:views, :mention, :modals]) %>
        <%= content_tag :datalist, id: 'deeds' do %>
          <% Deed.all.each do |deed| %>
            <%= content_tag :option, deed.title %>
          <% end %>
        <% end %>
        <div class="input-group-btn">
          <%= content_tag :a,
                          icon('search', class: 'fa-fw'),
                          id: 'btn-show-selected-deed-details',
                          class: 'btn btn-outline-info',
                          role: 'button' %>
        </div>
      </div>
    </div>
  </div>
  <div id="assoc-person" class="row form-group">
