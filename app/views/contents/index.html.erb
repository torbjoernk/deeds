<h1>
  <%= model_name_with_icon Content, :plural %>
  <%= render partial: 'shared/index/main_action_btn',
             locals: { path_to_new_entity: new_content_path,
                       path_to_refresh: contents_path,
                       entity_name: Content.model_name.human } %>
</h1>

<div class="row">
  <div id="contents-table">
    <div class="table" id="contents">
      <div class="table-body container-fluid">
        <%= render partial: 'content', collection: @contents %>
      </div>
    </div>
  </div>
</div>
