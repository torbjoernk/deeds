<% native ||= false %>
<% mention_entry ||= @mention_entry %>

<div class="row">
  <label class="col-md-3"><strong><%= Deed.model_name.human %></strong></label>
  <div class="col-md-9">
    <% if mention_entry.deed.nil? %>
      <em class="text-muted"><%= t('views.mention_entry.no_deed_referenced') %></em>
    <% else %>
      <%= icon_for Deed %>
      <%= mention_entry.deed.title %>
      <span class="pull-right">
        <%= link_to_show_entity mention_entry.deed, remote=false %>
      </span>
    <% end %>
  </div>
</div>
