    <% end %>
  </div>
</div>
<div class="row">
  <label class="col-md-3"><strong><%= Mention::MentionEntry.human_attribute_name :notes %></strong></label>
  <div class="col-md-9">
    <%= render partial: 'shared/show/entity_notes', locals: { notes: mention_entry.notes } %>
  </div>
</div>
