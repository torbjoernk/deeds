<div class="card">
  <div class="card-header"
       role="tab"
       id="heading-translation-<%= content_translation.id %>">
    <a data-toggle="collapse"
       data-parent="#content-content-translations-accordion"
       href="#collapse-translation-<%= content_translation.id %>"
       aria-expanded="true"
       aria-controls="collapse-translation-<%= content_translation.id %>">
      <%= content_translation.language.humanize %>
    </a>
  </div>
  <div id="collapse-translation-<%= content_translation.id %>"
       class="card-block collapse"
       role="tabpanel"
       aria-labelledby="heading-translation-<%= content_translation.id %>">
    <%= content_translation.translation %>
  </div>
</div>
