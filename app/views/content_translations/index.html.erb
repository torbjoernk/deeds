<h1>
  <%= model_name_with_icon ContentTranslation, :plural %>
  <span class="btn-group">
    <%= link_to new_content_translation_path,
                class: 'btn btn-sm btn-primary',
                id: 'btn-new-content-translation',
                title: 'Add new Content Translation',
                data: { toggle: 'tooltip' },
                remote: true do -%>
      <%= icon('plus', class: 'fa-fw') %>
    <% end -%>
  </span>
</h1>

<div id="contents-table">
  <table class="table table-hover table-sm" id="contents">
    <thead>
    <tr>
      <th class="col-content-language"><%= ContentTranslation.human_attribute_name :language %></th>
      <th class="col-content-content"><%= ContentTranslation.human_attribute_name :translation %></th>
      <th class="col-content-assoc">Associations</th>
      <th class="col-content-actions">Actions</th>
    </tr>
    </thead>
    <tbody>
    <%= render partial: 'content_translation', collection: @content_translations %>
    </tbody>
  </table>
</div>

<div class="modal fade" id="content-translation-modal" tabindex="-1" role="dialog"
     aria-labelledby="content-translation-modal-label" aria-hidden="true">
</div>
