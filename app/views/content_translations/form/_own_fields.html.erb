<div class="row form-group">
  <%= f.label :language, class: 'col-md-3 form-control-label' %>
  <div class="col-md-9">
    <%= f.select :language,
                 options_for_select(Content::LANGUAGES.map { |e| e.humanize },
                                    (@content_translation.language ? @content_translation.language.humanize : nil)),
                 class: 'form-control' %>
  </div>
</div>
<div class="row form-group">
  <%= f.label :translation, class: 'col-md-3 form-control-label' %>
  <div class="col-md-9">
    <%= f.text_area :translation, rows: 5, class: 'form-control' %>
  </div>
</div>
