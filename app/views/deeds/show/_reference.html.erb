<li class="list-group-item">
  <%= reference.to_s %>
  <span class="btn-group btn-group-sm pull-right">
    <%= link_to_show_entity reference %>
    <%= link_to deed_path(@deed, sub_action: 'remove_reference', reference_id: reference.id),
                method: :patch,
                id: "btn-remove-reference-#{reference.id}",
                class: 'btn btn-sm btn-outline-danger',
                title: t('views.deed.actions.remove_reference'),
                data: { toggle: 'tooltip',
                        confirm: t('helpers.confirmation.delete'),
                        placement: 'left' } do %>
      <%= icon('trash', class: 'fa-fw') %>
    <% end %>
  </span>
</li>
