<h1>
  <%= model_name_with_icon Deed, :plural %>
  <span class="btn-group">
    <%= link_to new_deed_path,
                class: 'btn btn-primary',
                id: 'btn-new-deed',
                title: 'Add new Deed',
                data: { toggle: 'tooltip' },
                remote: true do -%>
      <%= icon('plus', class: 'fa-fw') %>
    <% end -%>
    <%= link_to deeds_path,
                class: 'btn btn-secondary',
                id: 'btn-refresh-table',
                title: 'Refresh table',
                data: { toggle: 'tooltip' },
                remote: true do %>
      <%= icon('refresh', class: 'fa-fw') %>
    <% end %>
  </span>
</h1>

<div id="deeds-table">
  <div class="table" id="deeds">
    <div class="table-body container-fluid">
      <%= render partial: 'deed', collection: @deeds %>
    </div>
  </div>
</div>
