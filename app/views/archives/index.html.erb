<h1>
  <%= model_name_with_icon Archive, :plural %>
  <%= render partial: 'shared/index/main_action_btn',
             locals: { path_to_new_entity: new_archive_path,
                       path_to_refresh: archives_path,
                       entity_name: Archive.model_name.human } %>
</h1>

<% if @storage %>
  <dl class="row">
    <dt class="col-md-2">associated with Storage</dt>
    <dd class="col-md-10">
      <%= render partial: 'storages/oneline', locals: { storage: @storage } %>
    </dd>
  </dl>
<% end %>
<% if @source %>
  <dl class="row">
    <dt class="col-md-2">associated with Source</dt>
    <dd class="col-md-10">
      <%= render partial: 'sources/oneline', locals: { source: @source } %>
    </dd>
  </dl>
<% end %>

<div class="row">
  <div id="archives-table">
    <div class="table" id="archives">
      <div class="table-body container-fluid">
        <%= render partial: 'archive', collection: @archives %>
      </div>
    </div>
  </div>
</div>
