<% content_for :form_modal_before do %>
  <%= form_tag @source, method: (action_name.to_sym == :edit ? :patch : :post) %>
<% end %>

<% content_for :form_modal_title do %>
  <%= form_modal_title Source %>
<% end %>

<% content_for :form_modal_content do %>
  <%= render 'sources/form/own_fields' %>
  <div id="nested-fields"></div>
<% end %>

<% content_for :form_modal_submit do %>
  <%= render partial: 'shared/form/submit', locals: { entity: @source } %>
<% end %>

<% content_for :form_modal_after do %>
  </form>
<% end %>

<%= render 'shared/form_modal' %>
