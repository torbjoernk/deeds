<div class="modal-dialog modal-lg" role="document">
  <div class="modal-content">
    <%= form_for @source do |f| %>
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <h4 class="modal-title" id="source-modal-label"><%= action_name.humanize %> Source</h4>
      </div>
      <div class="modal-body">
        <div class="container-fluid">
          <%= render partial: 'sources/form/own_fields', locals: { f: f } %>
          <div id="source-form-nested-fields">
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <div class="container-fluid">
          <div class="row">
            <div class="col-md-12 text-xs-center">
              <%= f.submit class: 'btn btn-sm btn-primary', data: { close: '' } %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
