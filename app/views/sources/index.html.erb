<h1>
  Sources
  <span class="btn-group">
    <%= link_to new_source_path,
                class: 'btn btn-sm btn-primary',
                id: 'btn-new-source',
                title: 'Add new Source',
                data: { toggle: 'tooltip' },
                remote: true do -%>
      <%= icon('plus', class: 'fa-fw') %>
    <% end -%>
  </span>
</h1>

<% if @archive %>
  <dl class="row">
    <dt class="col-md-2">associated with Archive</dt>
    <dd class="col-md-10">
      <%= render partial: 'archives/oneline', locals: { archive: @archive } %>
    </dd>
  </dl>
<% end %>

<div id="sources-table" class="row">
  <table class="table table-hover table-sm" id="sources">
    <thead>
    <tr>
      <th class="col-source-title">Title</th>
      <th class="col-source-type">Source Type</th>
      <th class="col-source-notes">Notes</th>
      <th class="col-source-assoc">Associations</th>
      <th class="col-source-actions">Actions</th>
    </tr>
    </thead>
    <tbody>
    <%= render partial: 'source', collection: @sources %>
    </tbody>
  </table>
</div>

<div class="modal fade" id="source-modal" tabindex="-1" role="dialog"
     aria-labelledby="source-modal-label" aria-hidden="true">
</div>
<div class="modal fade" id="archive-modal" tabindex="-1" role="dialog"
     aria-labelledby="archive-modal-label" aria-hidden="true">
</div>
