<h1>
  <%= model_name_with_icon Source, :plural %>
  <span class="btn-group">
    <%= link_to new_source_path,
                class: 'btn btn-sm btn-primary',
                id: 'btn-new-source',
                title: 'Add new Source',
                data: { toggle: 'tooltip' },
                remote: true do -%>
      <%= icon('plus', class: 'fa-fw') %>
    <% end -%>
  </span>
</h1>

<% if @archive %>
  <dl class="row">
    <dt class="col-md-2">associated with Archive</dt>
    <dd class="col-md-10">
      <%= render partial: 'archives/oneline', locals: { archive: @archive } %>
    </dd>
  </dl>
<% end %>
<% if @deed %>
  <dl class="row">
    <dt class="col-md-2">associated with Deed</dt>
    <dd class="col-md-10">
      <%= render partial: 'deeds/oneline', locals: { archive: @deed } %>
    </dd>
  </dl>
<% end %>

<div id="sources-table">
  <div class="table" id="sources">
    <div class="table-body container-fluid">
      <%= render partial: 'source', collection: @sources %>
    </div>
  </div>
</div>
