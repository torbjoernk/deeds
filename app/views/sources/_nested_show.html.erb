<li class="list-group-item">
  <div id="source-<%= source.id %>" class="list-group-item-heading" role="tab">
    <%= icon_for Source %>
    <%= source.title %>
    <a class="pull-right btn btn-sm collapsed"
       aria-controls="source-<%= source.id %>-content"
       aria-expanded="false"
       href="#source-<%= source.id %>-content"
       data-parent="#collection-sources-accordion"
       data-toggle="collapse">
      <%= icon('search', class: 'fa-fw') %>
    </a>
  </div>
  <div id="source-<%= source.id %>-content"
       class="list-group-item-text collapse"
       aria-labelledby="source-<%= source.id %>"
       role="tabpanel"
       aria-expanded="false">
    <%= render partial: 'sources/show/content', locals: { source: source } %>
  </div>
</li>
